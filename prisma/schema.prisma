generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  name     String?
  imageUrl String?
  tweets   Tweet[]
}

model Tweet {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  body   String
  likes  Int
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}
